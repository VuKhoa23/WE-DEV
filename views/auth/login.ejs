<%- include('../partials/header'); -%>

<div id="container">
    <div class="header">
        <img src="/images/logo1.png" alt="">
        <p>Mạng xã hội dành cho lập trình viên</p>
    </div>

    <div class="main">
        <div class="icon">
            <div class="upper-icon">
                <img src="/images/Internet-60b6.svg" alt="">
            </div>
            <div class="lower-icon">
                <div class="left-image">
                    <img src="/images/Online studying-60b6.svg" alt="">
                </div>
                <div class="right-image">
                    <img src="/images/Hacker-60b6.svg" alt="">
                </div>
            </div>
        </div>

        <div class="wrapper">
            <form action="">
                <h1>Log In</h1>
                <div class="form-group">
                    <input type="email" placeholder="Email" class="form-control" required>
                    <i class='bx bxs-envelope'></i>
                </div>

                <div class="form-group">
                    <input type="password" placeholder="Password" class="form-control" id="password" required>
                    <i class='bx bxs-lock'></i>
                    <div class="show">
                        <i class='bx bxs-show' id="show-icon"></i>
                    </div>
                </div>

                <div class="form-check">
                    <label for="remember" class="form-check-label">
                        <input type="checkbox" name="remember" id="remember" class="form-check-input"> Remember me
                    </label>
                    <a href="#">Forgot password</a>
                </div>

                <button id="login-btn">Log in</button>

                <div class="register">
                    <p>Don't have an account ? <a href="./signup.html">Sign up</a></p>
                </div>

            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelector('#show-icon').onmousedown = function () {
            document.querySelector('#password').type = 'text';
        }
    });

    document.addEventListener('DOMContentLoaded', () => {
        document.querySelector('#show-icon').onmouseup = function () {
            document.querySelector('#password').type = 'password';
        }
    });
</script>


